<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.qabel.qabelbox.fragments.AddContactFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextContactName"
            android:hint="@string/contact_name"
            android:drawableStart="@drawable/ic_perm_identity_black_24dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextContactDropURL"
            android:layout_below="@+id/editTextContactName"
            android:inputType="textUri"
            android:drawableStart="@drawable/ic_share_black_24dp"
            android:hint="@string/contact_drop_url"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextContactPublicKey"
            android:hint="@string/contact_public_key"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            android:layout_below="@+id/editTextContactDropURL"
            android:layout_alignEnd="@+id/editTextContactDropURL"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add_contacts"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBottomBackground"
            android:baselineAligned="false">

            <Button
                android:id="@+id/buttonScanContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/Scan"
                style="@style/BottomBarButton" />
            <Button
                android:id="@+id/buttonAddContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/add"
                style="@style/BottomBarButton" />
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
